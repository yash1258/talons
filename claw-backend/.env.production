# Server
PORT=3000
NODE_ENV=production

# Database — uses Docker service name "db", not localhost
DATABASE_URL="postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@db:5432/claw?schema=public"

# JWT — MUST change this!
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_64_CHAR_STRING

# Docker
DOCKER_HOST=unix:///var/run/docker.sock
OPENCLAW_IMAGE=openclaw/openclaw:latest
BASE_PORT=20000
MAX_CONTAINERS=10

# Redis — uses Docker service name "redis"
REDIS_URL=redis://redis:6379

# CORS — add your VPS IP/domain here
ALLOWED_ORIGINS=http://YOUR_VPS_IP:4200

# OpenRouter free tier pooled key
OPENROUTER_FREE_KEY=YOUR_OPENROUTER_KEY_HERE
